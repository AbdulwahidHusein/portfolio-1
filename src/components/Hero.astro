---
import { Image } from "astro:assets";
import { siteConfig } from "../config";
import profileImage from "../assets/profile.jpg";
---

<div
  id="hero"
  class="relative isolate overflow-hidden pt-24 pb-16 lg:pt-32 lg:pb-24 flex items-center min-h-[80vh]"
>
  <div class="mx-auto max-w-4xl px-6 lg:px-8">
    <div class="flex flex-col-reverse lg:flex-row items-center gap-8 lg:gap-16">
      <div class="flex-1 text-center lg:text-left">
        <h2
          class="text-lg font-semibold tracking-wide text-blue-600 uppercase animate-fade-in"
        >
          Hello, I'm
        </h2>
        <h1
          class="mt-4 text-5xl sm:text-7xl font-bold tracking-tight text-gray-900 animate-fade-in animation-delay-200"
        >
          {siteConfig.name}
        </h1>
        <p
          class="mt-6 text-lg leading-8 text-gray-600 animate-fade-in animation-delay-400"
        >
          {siteConfig.title}
        </p>
        <p
          class="mt-4 text-base leading-7 text-gray-500 animate-fade-in animation-delay-400"
        >
          {siteConfig.description}
        </p>
        
        <div class="mt-10 flex items-center justify-center lg:justify-start gap-x-6 animate-fade-in animation-delay-600">
          <a
            href="#experience"
            class="rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-all"
          >
            View Experience
          </a>
          <a href="#projects" class="text-sm font-semibold leading-6 text-gray-900 group">
            View Projects <span aria-hidden="true" class="inline-block transition-transform group-hover:translate-x-1">â†’</span>
          </a>
        </div>
      </div>

      <div class="flex-shrink-0 animate-fade-in animation-delay-200 mb-8 lg:mb-0">
        <Image
          src={profileImage}
          alt={siteConfig.name}
          class="w-40 sm:w-64 lg:w-80 aspect-[3/4] object-cover rounded-2xl shadow-sm border border-gray-100"
          loading="eager"
        />
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
  }

  .animation-delay-600 {
    animation-delay: 0.6s;
  }
</style>
