<section id="contact" class="py-24 bg-white">
  <div class="max-w-4xl mx-auto px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24 items-start">
      <div>
        <h2 class="text-4xl font-bold text-gray-900 mb-6">Let's Build Something<br/><span class="text-blue-600">Intelligent.</span></h2>
        <p class="text-lg text-gray-600 leading-relaxed mb-8">
          Have a complex problem that needs an elegant solution? I'm always open to discussing AI architecture, backend systems, or new opportunities.
        </p>
        
        <div class="space-y-4 text-gray-600">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-blue-50 flex items-center justify-center text-blue-600">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
            </div>
            <span>abdulwahidhussen750@gmail.com</span>
          </div>
          <div class="flex items-center gap-3">
             <div class="w-10 h-10 rounded-full bg-blue-50 flex items-center justify-center text-blue-600">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path></svg>
            </div>
            <span>@AbdulwahidHusein</span>
          </div>
        </div>
      </div>

      <form id="contact-form" class="space-y-8">
        <div class="group">
          <label for="name" class="block text-sm font-medium text-gray-500 mb-1 transition-colors group-focus-within:text-blue-600">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full py-3 border-b-2 border-gray-200 focus:border-blue-600 transition-colors outline-none bg-transparent placeholder-gray-300"
            placeholder="John Doe"
          />
        </div>

        <div class="group">
          <label for="contact" class="block text-sm font-medium text-gray-500 mb-1 transition-colors group-focus-within:text-blue-600">Contact Info</label>
          <input
            type="text"
            id="contact"
            name="contact"
            required
            class="w-full py-3 border-b-2 border-gray-200 focus:border-blue-600 transition-colors outline-none bg-transparent placeholder-gray-300"
            placeholder="email@example.com"
          />
        </div>

        <div class="group">
          <label for="message" class="block text-sm font-medium text-gray-500 mb-1 transition-colors group-focus-within:text-blue-600">Message</label>
          <textarea
            id="message"
            name="message"
            rows="3"
            required
            class="w-full py-3 border-b-2 border-gray-200 focus:border-blue-600 transition-colors outline-none bg-transparent placeholder-gray-300 resize-none"
            placeholder="Tell me about your project..."
          ></textarea>
        </div>

        <button
          type="submit"
          id="submit-btn"
          class="group w-full bg-gray-900 text-white font-medium py-4 rounded-lg hover:bg-blue-600 transition-all duration-300 flex items-center justify-center gap-2 shadow-lg shadow-gray-200 hover:shadow-blue-200"
        >
          <span>Send Message</span>
          <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </button>

        <div id="status-message" class="hidden text-center p-4 rounded-lg text-sm font-medium"></div>
      </form>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const statusMessage = document.getElementById('status-message') as HTMLDivElement;

  const BOT_TOKEN = '7690656158:AAHYCKGKhO_BXNbBBvsJxl2c-NRXIoLB3Fc';
  const CHAT_ID = '5542174411';

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Disable button and show loading state
    submitBtn.disabled = true;
    const originalBtnText = submitBtn.innerHTML;
    submitBtn.innerHTML = '<span>Sending...</span>';

    const formData = new FormData(form);
    const name = formData.get('name');
    const contact = formData.get('contact');
    const message = formData.get('message');

    const text = `
ðŸš€ *New Portfolio Contact*

ðŸ‘¤ *Name:* ${name}
ðŸ“± *Contact:* ${contact}

ðŸ“ *Message:*
${message}
    `;

    try {
      const response = await fetch(`https://api.telegram.org/bot${BOT_TOKEN}/sendMessage`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          chat_id: CHAT_ID,
          text: text,
          parse_mode: 'Markdown',
        }),
      });

      if (response.ok) {
        // Success
        form.reset();
        statusMessage.textContent = 'Message sent successfully! I will get back to you soon.';
        statusMessage.className = 'text-center p-4 rounded-lg text-sm font-medium bg-green-50 text-green-700 block mt-4';
      } else {
        throw new Error('Failed to send message');
      }
    } catch (error) {
      // Error
      statusMessage.textContent = 'Failed to send message. Please try again later.';
      statusMessage.className = 'text-center p-4 rounded-lg text-sm font-medium bg-red-50 text-red-700 block mt-4';
    } finally {
      // Reset button
      submitBtn.disabled = false;
      submitBtn.innerHTML = originalBtnText;
      
      // Hide status message after 5 seconds
      setTimeout(() => {
        statusMessage.className = 'hidden';
      }, 5000);
    }
  });
</script>
