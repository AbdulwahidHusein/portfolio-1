---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section id="experience" class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">
          Experience
        </h2>
        
        <div class="space-y-8">
          {siteConfig.experience.map((item, index) => (
            <div class="relative pl-8 sm:pl-0 group">
              {/* Vertical Line */}
              <div class="hidden sm:block absolute left-0 top-0 bottom-0 w-px bg-gray-200 group-last:bottom-auto group-last:h-full"></div>
              {/* Dot */}
              <div class="hidden sm:block absolute left-[-4px] top-2 w-2 h-2 rounded-full bg-gray-900 ring-4 ring-white"></div>
              
              <div class="sm:pl-12 relative pb-12">
                <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between mb-2 gap-2">
                  <h3 class="text-2xl font-bold text-gray-900">
                        {item.link ? (
                          <a
                            href={item.link}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-gray-900 hover:text-blue-600 transition-colors flex items-center gap-2 group/link"
                          >
                            {item.company}
                            <svg
                              class="w-4 h-4 text-gray-400 group-hover/link:text-blue-600 transition-colors"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                              />
                            </svg>
                          </a>
                        ) : (
                          item.company
                        )}
                  </h3>
                  <div class="text-sm font-mono text-gray-500">
                    {item.dateRange}
                  </div>
                </div>
                
                <p class="text-lg text-gray-500 font-medium mb-4">
                  {item.title}
                </p>

                <p class="text-gray-600 leading-relaxed max-w-3xl">
                  {item.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )
}
